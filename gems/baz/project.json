{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "root": "gems/baz",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "gems/baz",
        "commands": ["BUNDLE_GEMFILE=$PWD/../../Gemfile bundle exec rake build"]
      },
      "outputs": ["gems/baz/pkg"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "gems/baz",
        "command": "BUNDLE_GEMFILE=$PWD/../../Gemfile bundle exec standardrb -P -f simple -o rubocop.log"
      },
      "outputs": ["gems/baz/rubocop.log"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "gems/baz",
        "commands": ["BUNDLE_GEMFILE=$PWD/../../Gemfile bundle exec rake spec"]
      },
      "dependsOn": ["build"],
      "outputs": ["gems/baz/coverage"]
    }
  }
}
